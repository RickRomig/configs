include $HOME/.config/i3/workspaces.conf
include $HOME/.config/i3/bar.conf
set $mod Mod4
# set $lm LVDS-1
# set $rm VGA-1
# font pango:monospace 8
font pango:"Cascadia Code" 14

exec_always --no-startup-id ~/.config/i3/autostart.sh

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

new_window 1pixel
gaps inner 8
gaps outer 4

workspace_auto_back_and_forth yes

# Window rules
# Kitty dropdown scratchpad
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 1000 600
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 5
# Ranger scratchpad
for_window [class="UXTerm"] floating enable
for_window [class="UXTerm"] resize set 1250 700
for_window [class="UXTerm"] move scratchpad
for_window [class="UXTerm"] border pixel 5
# Gnome-Calculator scratchpad
for_window [instance="gnome-calculator"] floating enable
for_window [instance="gnome-calculator"] resize set 650 450
for_window [instance="gnome-calculator"] move scratchpad
for_window [instance="gnome-calculator"] border pixel 5
