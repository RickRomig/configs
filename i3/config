include $HOME/.config/i3/workspaces.conf
include $HOME/.config/i3/bar.conf
set $mod Mod4
# font pango:monospace 8
font pango:"Cascadia Code" 14

exec_always --no-startup-id ~/.config/i3/autostart.sh

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

new_window 1pixel
gaps inner 8
gaps outer 4

workspace_auto_back_and_forth yes

# Window rules
# Kitty dropdown
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 1000 600
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] border pixel 5
# Ranger
# for_window [instance="ranger"] floating enable
# for_window [instance="ranger"] resize set 1500 850
# for_window [instance="ranger"] move scratchpad
# for_window [instance="ranger"] border pixel 8
# KeePassXC
for_window [instance="keepassxc"] floating enable
for_window [instance="keepassxc"] resize set 1500 850
for_window [instance="keepassxc"] move scratchpad
for_window [instance="keepassxc"] border pixel 8
