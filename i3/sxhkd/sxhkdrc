super + Escape
    pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reload config'

super + Return
   kitty

#Rofi & dmenu

super + space
   	rofi -modi drun -show drun -line padding 4 -hide-scrollbar -show-icons

super + d
	dmenu_run

super + shift + e
    ~/.config/i3/dmconf.sh

super + f
    wmctrl -a Thunar || thunar

super + shift + d
 rofi -show


##### Application Keybindings #####

super + r
	kitty -e "ranger"

super + e
    wmctrl -a VSCodium || codium

super + c
	wmctrl -a Chromium || chromium

super + b
    wmctrl -a Brave || brave-browser

super + w
    wmctrl -a "Mozilla Firefox" || firefox

super + p
	keepassxc

ctrl + alt + s
    flameshot gui


##### Audio Keybindings #####

XF86AudioRaiseVolume
        amixer -c 0 -- sset Master 2db+

XF86AudioLowerVolume
        amixer -c 0 -- sset Master 2db-

XF86AudioMicMute
        amixer -c 0 -- sset Master toggle

alt + d
        amixer -c 0 -- sset Master 2db+

alt + a
        amixer -c 0 -- sset Master 2db-

XF86AudioPlay
    playerctl play-pause

ctrl + alt + p
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

ctrl + shift + period
    playerctl next

ctrl + shift + comma
    playerctl previous

XF86AudioStop
    playerctl stop

alt + {h,j,k,l}
   mpc {prev,next,play,pause}


##### i3 Specific Keybindings #####

super + v
    i3-msg split v; notify-send 'vertical split'

super + shift + v; notify-send 'horizonal split'
    i3-msg split h

super + alt + f
    i3-msg fullscreen toggle

super + shift + space
    i3-msg floating toggle

super + control + space
    i3-msg focus mode_toggle

super + a
    i3-msg focus parent


##### Scratchpads #####

super + shift + minus
	i3-msg move scratchpad

super + minus
	i3-msg scratchpad show

super + ctrl + Return
	kitty --name dropdown

super + shift + Return
	i3-msg [instance="dropdown"] scratchpad show; move position center

super + ctrl + c
	gnome-calculator

super + shift + c
	i3-msg [instance="gnome-calculator"] scratchpad show; move position center

super + ctrl + f
	kitty --class "UXTerm" -e "ranger"

super + shift + f
	i3-msg [class="UXTerm"] scratchpad show; move position center


##### workspaces #####

super + {1-9,0}
    i3-msg workspace {1-9,10}

super + shift+{1-9,0}
    i3-msg move container to workspace number {1-9,10}

super + alt + {Right,Left}
	i3-msg workspace {next,prev}

##### movement #####

super+{h,j,k,l}
    i3-msg focus {left,down,up,right}

super+shift+{h,j,k,l}
    i3-msg move {left,down,up,right}

super+{Left,Down,Up,Right}
    i3-msg focus {left,down,up,right}

super+shift+{Left,Down,Up,Right}
    i3-msg move {left,down,up,right}

##### Monitor Brightness #####

XF86MonBrightnessUp
	xbacklight +10

XF86MonBrightnessDown
	xbacklight -10

##### other bindings #####

super + q
    i3-msg kill

super + shift + q
     i3-msg exit

super + shift + r
    i3-msg reload; notify-send 'i3' 'Reloaded'

super + alt + r
    i3-msg restart; notify-send 'i3' 'Restarted'

super + ctrl + {Left,Down,Up,Right}
    i3-msg resize {grow width 1 px or 1 ppt, shrink height 1 px or 1 ppt, grow height 1 px or 1 ppt, shrink width 1 px or 1 ppt}

super + x
	~/.config/i3/logout

super + t
    notify-send -t 3500 "$(date '+%a %b %e %r')"
