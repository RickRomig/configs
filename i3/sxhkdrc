# Reload SXHKD config
super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reload config'
# Kill current window
super + q
	i3-msg kill

# Exit i3
super + shift + q
	i3-msg exit

# reload i3 config
super + shift + c
	i3-msg reload; notify-send -i ~/.icons/i3wm.png 'i3wm' 'Config Reloaded'

# Restart i3
super + shift + r
	i3-msg restart; notify-send -i ~/.icons/i3wm.png 'i3wm' 'Restarted i3'

# Resize window
super + ctrl + {Left,Down,Up,Right}
	i3-msg resize {grow width 1 px or 1 ppt, shrink height 1 px or 1 ppt, grow height 1 px or 1 ppt, shrink width 1 px or 1 ppt}

# Logout, lock screen, reboot, shutdown, suspend
super + x
	~/.config/i3/scripts/logout

##### i3 Specific Keybindings #####

# Vertical split
super + alt + v
	i3-msg split v; notify-send 'i3wm' 'vertical split'

# Horizonal split
super + alt + z
	i3-msg split h; notify-send 'i3wm' 'horizonal split'

# Toggle fullscreen
super + alt + f
	i3-msg fullscreen toggle

# Toggle floating window
super + alt + space
	i3-msg floating toggle

# Toggle floating & tiling
super + ctrl + space
	i3-msg focus mode_toggle

# Focus on parent window
super + a
	i3-msg focus parent

##### Rofi & Dmenu #####

# Dmenu
super + d
	dmenu_run

# Rofi application menu
super + alt + d
	rofi -modi drun -show drun -line padding 4 -hide-scrollbar -show-icons

# Edit configs
super + shift + e
	~/.config/i3/scripts/dmconf.sh

# Help with keybindings
super + shift + h
	~/.config/i3/scripts/help

##### Applications #####

# Terimal (Kitty)
super + Return
	kitty

# File manager
super + f
	wmctrl -a Thunar || thunar

# Editor
super + e
	wmctrl -a VSCodium || codium
	# wmctrl -a Geany || geany

# Chromium browser
super + c
	wmctrl -a Chromium || chromium
	# wmctrl -a "Google Chrome" || google-chrome-stable

# Brave browser
super + b
	wmctrl -a Brave || brave-browser

# Firefox browser
super + w
	wmctrl -a "Mozilla Firefox" || firefox

# Gnome calculator
super + g
	gnome-calculator

# KeepassXC
super + k
	keepassxc

# Screenshot (Region Select)
super + Print
	flameshot gui --path ~/Screenshots/

# Screenshot (Fullscreen)
Print
	flameshot full --path ~/Screenshots/

##### Scratchpads #####

# Move to scratchpad
super + minus
	i3-msg move scratchpad; i3-msg scratchpad show, resize set 1200 800, move position center

# Toggle scratchpad
super + equal
	i3-msg scratchpad show

# Move scratchpad back to tiling
super + shift + equal
	i3-msg floating disable

# Kitty scratchpad
super + ctrl + Return
	kitty --name dropdown

# Toggle Kitty scratchpad
super + shift + Return
	i3-msg [instance="dropdown"] scratchpad show

# Ranger scratchpad
super + ctrl + f
	kitty --class "UXTerm" -e "ranger"

# Toggle Ranger scratchpad
super + shift + f
	i3-msg [class="UXTerm"] scratchpad show

##### Workspaces #####

# Open workspaces
super + shift + d
	rofi -show

# Switch to workspace
super + {1-9,0}
	i3-msg workspace {1-9,10}

# Move contaniner to workspace
super + shift+{1-9,0}
	i3-msg move container to workspace number {1-9,10}

# Next/Previous workspace
super + alt + {Right,Left}
	i3-msg workspace {next,prev}

##### Movement #####

# Focus left, down, up, right
super+{Left,Down,Up,Right}
	i3-msg focus {left,down,up,right}

# Move left, down, up, right
super+shift+{Left,Down,Up,Right}
	i3-msg move {left,down,up,right}

##### Monitor Brightness #####

XF86MonBrightnessUp
	xbacklight +10

XF86MonBrightnessDown
	xbacklight -10

##### Audio Keybindings #####

# Increase volume
super + Insert
	~/.config/i3/scripts/changevolume up

# Decrease volume
super + Delete
	~/.config/i3/scripts/changevolume down

# Mute volume
super + m
	~/.config/i3/scripts/changevolume mute

# Player = pause
ctrl + alt + p
	playerctl play-pause

# Player - next
ctrl + shift + period
	playerctl next

# Player - previous
ctrl + shift + comma
	playerctl previous

#  MPC Player = prev, next, play, pause
alt + {h,j,k,l}
	mpc {prev,next,play,pause}

##### Other bindings #####

# Current weather
super + shift + w
	notify-send -t 3600 "Current Weather" "$(~/.config/i3/scripts/current_wx.sh)"

# Check updates
super + shift + u
	notify-send -t 3600 "Updates" "$(~/.config/i3/scripts/check-updates.sh)"
